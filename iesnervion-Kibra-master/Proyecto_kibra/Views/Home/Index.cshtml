@model Proyecto_kibra.Models.LoginModel
@{
    Layout = null;
}

<!-- Esta es la pagina de login -->
<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">

    <title>Login </title>

    <link rel="shortcut icon" type="image/png" href="~/Resources/images/favicon_Kibra%20_16x16.ico" />

    <link href="~/Resources/css/bootstrap4.min.css" rel="stylesheet" />
    <link href="~/Resources/css/vistas/index.css" rel="stylesheet" />
    <link href="~/Resources/css/main.css" rel="stylesheet" />
    <script src="~/Resources/js/jquery.js"></script>
    <script src="~/Resources/js/bootstrap4.min.js"></script>
    <script src="~/Resources/js/main.js"></script>
</head>

<body>
    <div class="container-signin">
        <div class="container-form-signin">
            @using (Html.BeginForm("Index", "Home", FormMethod.Post, new { @class = "form-signin" }))
            {
                <div class="container_form-signin-logo">
                    <img class="form-signin-logo" src="~/Resources/images/Logo_Kibra.png" />
                </div>

                <label for="inputEmail" class="sr-only">Cuenta de correo</label>
                @*<input type="email" id="inputEmail" class="form-control" placeholder="Cuenta de correo" required autofocus>*@
                @Html.TextBoxFor(model => model.login.Usuario, new { @placeholder = "Cuenta de correo", @type = "text", @id = "inputEmail", @class = "form-control", @required = "required", @autofocus = "autofocus" })
                <label for="inputPassword" class="sr-only">Contraseña</label>
                @*<input type="password" id="inputPassword" class="form-control" placeholder="Contraseña" required>*@
                @Html.PasswordFor(model => model.login.Passwd, new { @placeholder = "Contraseña", @required = "required", @type = "password", @id = "inputPassword", @class = "form-control" })
                <div class="checkbox">
                    <label>
                        <input type="checkbox" value="remember-me"> Recordar sesión
                    </label>
                </div>
                if (Model.ErrorMessage != null)
                {
                    String[] splitArrayError = @Model.ErrorMessage.Split('.');
                    <div id="alert_error_msg" class="alert alert-danger">
                        <p><strong>@splitArrayError[0]! </strong></p>
                        @splitArrayError[1]
                    </div>
                }

                <button class="btn btn-lg btn-primary btn-block" type="submit">Entrar</button>
            }
            <div class="gaussian-blur blur"></div>
        </div>

    </div> <!-- /container -->


</body>
</html>
