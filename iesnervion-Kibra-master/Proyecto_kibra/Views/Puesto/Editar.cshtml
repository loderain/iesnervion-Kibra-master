@model Entidades.Puesto

@{
    ViewBag.Title = "Editar";
    Layout = "~/Views/_LayoutMenu.cshtml";
}

<h2>Editar</h2>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Puesto</legend>

        
            @Html.HiddenFor(model => model.IdPuesto)
            

        <div class="editor-label">
            @Html.LabelFor(model => model.NombrePue)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.NombrePue)
            @Html.ValidationMessageFor(model => model.NombrePue)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.DescPue)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.DescPue)
            @Html.ValidationMessageFor(model => model.DescPue)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Salario)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Salario)
            @Html.ValidationMessageFor(model => model.Salario)
        </div>

        <p>
            <input type="submit" value="Save" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Volver al listado", "Listado")
</div>


