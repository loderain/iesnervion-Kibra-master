@model IEnumerable<Entidades.Empleado>

@{
    ViewBag.Title = "Listado Empleados";
    Layout = "~/Views/_LayoutMenu.cshtml";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">
                Listado <small>de empleados</small>
            </h1>
            <ol class="breadcrumb">
                <li class="active">
                    <i class="fa fa-user"></i> Empleado
                </li>
            </ol>
        </div>
    </div>

    <p>
        @Html.ActionLink("Nuevo", "Nuevo", "", new { @class = "btn btn-primary btn-lg" })
    </p>
    <div class="table-responsive">
        <table class="table table-bordered table-hover table-striped">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.IdEmpleado)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.DniEmp)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.NombreEmp)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ApellidoEmp)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.FechaNac)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.DireccionEmp)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.TelefonoEmp)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.EmailEmp)
                    </th>
                    <th></th>
                </tr>
            </thead>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.IdEmpleado)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DniEmp)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.NombreEmp)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ApellidoEmp)
                    </td>
                    <td>
                        @*@Html.DisplayFor(modelItem => item.FechaNac.Day+"/"+item.FechaNac.Month+"/"+item.FechaNac.Year)*@
                        @item.FechaNac.Day/@item.FechaNac.Month/@item.FechaNac.Year
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DireccionEmp)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TelefonoEmp)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.EmailEmp)
                    </td>
                    <td>
                        @Html.ActionLink("Editar", "Editar", new { @id = item.IdEmpleado }) |
                        @Html.ActionLink("Detalles", "Detalles", new { @id = item.IdEmpleado }) |
                        @Html.ActionLink("Eliminar", "Eliminar", new { @id = item.IdEmpleado })
                    </td>
                </tr>
            }

        </table>
    </div>
</div>